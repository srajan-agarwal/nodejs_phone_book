{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2016",
    "moduleResolution": "node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/src",
    "skipLibCheck": true,
    "strict": true,
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}